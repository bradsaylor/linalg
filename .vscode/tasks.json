{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "01 C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "02 linalg: build library",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "mkdir -p build/obj lib && cd build/obj && gcc -c -g -O0 -Wall -Wextra -Werror -I../../include -I../../src/internal ../../src/*.c && ar rcs ../../lib/liblinalg.a *.o"
            ],
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "03 test: build active",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "mkdir -p tests/builds && gcc -g -O0 -Wall -Wextra -Werror -Iinclude -Itests/src \"${file}\" -Llib -llinalg -o \"tests/builds/${fileBasenameNoExtension}\""
            ],
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "04 test: run active",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "\"${workspaceFolder}/tests/builds/${fileBasenameNoExtension}\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "05 test: run active (rebuild lib first)",
            "dependsOn": [
                "linalg: build library",
                "test: build active",
                "test: run active"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "99 clean: artifacts",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "rm -rf build tests/builds && rm -f lib/liblinalg.a"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
